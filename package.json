{
  "name": "spectracode",
  "displayName": "SpectraCode",
  "publisher": "KosmicTeal",
  "description": "Color-pick your accent to identify workspaces.",
  "license": "MPL-2.0",
  "version": "1.0.2",
  "engines": {
    "vscode": "^1.80.0"
  },
  "extensionKind": [
		"ui",
		"workspace"
	],
	"categories": [
		"Themes",
    "Other"
	],
  "icon": "img/logo.png",
  "keywords": ["color","skin","window","organize","notifications"],
  "galleryBanner": {
    "color": "#333333",
    "theme": "dark"
  },
  "pricing": "Free",
  "repository": {
    "type": "git",
    "url": "https://github.com/kosmicteal/spectracode"
  },
  "bugs": {
    "url": "https://github.com/kosmicteal/spectracode/issues"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
		"views": {
			"explorer": [
				{
					"type": "webview",
					"id": "spectraCode.colorsView",
					"name": "SpectraCode"
				}
			]
		},
		"commands": [
			{
				"command": "spectraCode.clearColor",
				"category": "SpectraCode",
				"title": "Clear Custom Color",
				"icon": "$(discard)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "spectraCode.clearColor",
					"group": "navigation"
				}
			]
		}
	},
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
